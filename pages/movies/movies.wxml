<!--pages/movies/movies.wxml-->
<navigator url="/pages/movieDetail/movieDetail?index={{index}}" wx:for="{{moviesArray}}" wx:key="index">
  <view class="moviesContainer">
    <image class="movieImg" src="{{item.images.large}}"></image>
    <view class="movie_detail">
      <text class="movie_name">{{item.original_title}}</text>
      <text class="movie_year">{{item.year}}</text>
      <text class="movie_director">{{item.directors[0].name}}</text>
    </view>
    <text class="moive_rating">{{item.rating.average}}</text>
  </view>
</navigator>
