<!--pages/movieDetail/movieDetail.wxml-->
<view class="movieDetailContainer">
  <image class="movie_img" src="{{movieDetail.images.large}}"></image>
  <text class="movie_name">{{movieDetail.original_title}}</text>
  <view class="movie_detail">
    <text class="movie_rating">评分：{{movieDetail.rating.average}}</text>
    <text class="movie_director">导演：{{movieDetail.directors[0].name}}</text>
    <text class="movie_actor">主演：{{movieDetail.casts[1].name}}</text>
  </view>
  <button catchtap="btn_click">我要观影</button>
</view>
