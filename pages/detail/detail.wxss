/* pages/detail/detail.wxss */
.detailContainer {
  display: flex;
  flex-flow: column;
}

.headImg {
  width: 100%;
  height: 460rpx;
}

.musicImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}

.avatar_date {
  padding: 10rpx;
}

.avatar_date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.avatar_date text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.company {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.collection_share_container {
  position: relative;
}

.collection_share {
  margin-right: 50rpx;
  float: right;
}

.collection_share image {
  width: 90rpx;
  height: 90rpx;
  margin: 10rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background: #eee;
  position: absolute;
  top: 0rpx;
  z-index: -1;
}

button {
  width: 280;
  height: 80;
}

.content {
  font-size: 32rpx;
  margin-top: 20rpx;
  text-indent: 32rpx;
}